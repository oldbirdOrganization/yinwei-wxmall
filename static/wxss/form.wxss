.form-item {
  display: flex;
  min-height: 96rpx;
  border-bottom: 2rpx solid #d8d8d8;
}
.form-label {
  padding-left: 24rpx;
  width: 210rpx;
  line-height: 96rpx;
  font-size: 26rpx;
}
.form-input {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  width: 430rpx;
}
.form-input-txt {
  line-height: 96rpx;
  width: 414rpx;
  color: rgba(0, 0, 0, 0.6);
}
.arrow-icon {
  width: 12rpx;
  height: 26rpx;
  transform: rotate(90deg);
}
.form-unit {
  width: 40rpx;
}
.select-list {
  padding-bottom: 10rpx;
  margin-left: 70rpx;
}
.select-item {
  height: 58rpx;
  display: flex;
  align-items: center;
}
.select-icon {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 1rpx solid #bf947b;
  background-color: #fff;
  margin-right: 16rpx;
}
.select-icon.active {
  background-color: #c0987f;
}
.select-item-txt {
  font-size: 22rpx;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.card-top {
  padding: 0px 26rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card-img {
  width: 118rpx;
  height: 28rpx;
}
.case-img {
  width: 259rpx;
  height: 29rpx;
}
.more-btn {
  width: 54rpx;
  height: 27rpx;
  border: 1rpx solid #c5c5c5;
  border-radius: 10rpx;
  font-size: 18rpx;
  text-align: center;
  color: #c5c5c5;
}

.card-con {
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #bfbfbf;
}
.item {
  width: 50%;
  padding: 32rpx 0px 21rpx;
  text-align: center;
}
.item:nth-child(2n-1) {
  border-right: 1rpx solid #bfbfbf;
}
.item-img {
  width: 256rpx;
  height: 160rpx;
  border-radius: 16rpx;
}
.item-mt {
  height: 58rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.price-wrap {
  margin-right: 10rpx;
}
.item-mt-one {
  justify-content: center;
}
.price {
  font-size: 30rpx;
}
.unit {
  font-size: 10rpx;
}
.brand {
  padding: 0 12rpx;
  height: 20rpx;
  line-height: 20rpx;
  color: #fff;
  font-size: 14rpx;
  background-color: #caaa95;
  border-radius: 10rpx;
}

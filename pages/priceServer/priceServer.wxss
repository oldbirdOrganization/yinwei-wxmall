.container {
  background-color: #d8d8d8;
}
.top,
.list {
  background-color: #fff;
}

.top {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 148rpx;
  margin-bottom: 12rpx;
}
.top-item {
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 24rpx;
  border: 2rpx solid #9c9c9c;
  color: #9c9c9c;
  margin-left: 30rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}
.top-item:first-child {
  margin-left: 0rpx;
}
.top-item.active {
  color: #b98c70;
  border-color: #b98c70;
}

.list {
  padding: 30rpx 46rpx;
}
.item {
  display: flex;
  height: 60rpx;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
}
.item-left {
  display: flex;
  align-items: center;
}
.icon {
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  border: 1rpx solid #bf947b;
  background-color: #fff;
  margin-right: 16rpx;
}
.icon.active {
  background-color: #c0987f;
}
.desc {
  font-size: 18rpx;
}

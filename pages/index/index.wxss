.container {
  padding-top: 64rpx;
  position: relative;
}
.button-hover {
  background-color: transparent;
}
.top-bg {
  width: 100%;
  height: 286rpx;
  background-color: #caaa95;
  position: absolute;
  top: 0;
  left: 0;
}
.red-ev {
  width: 34rpx;
  height: 42rpx;
  position: absolute;
  right: 48rpx;
  top: 78rpx;
  z-index: 10;
}
/* banner area */
.banner {
  width: 100%;
  height: 336rpx;
}
.banner-img {
  width: 694rpx;
  height: 336rpx;
  margin-left: 28rpx;
  border-radius: 16rpx;
}
.main {
  padding: 9rpx 28rpx 0rpx;
}
.channel {
  padding-top: 50rpx;
  margin-bottom: 20px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.channel-item {
  width: 160rpx;
  height: 160rpx;
  text-align: center;
}
.channel-img {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
}
.channel-txt {
  font-size: 20rpx;
  color: #666666;
  display: block;
}
.server-big-img {
  width: 694rpx;
  height: 246rpx;
}
.server-small-img {
  width: 339rpx;
  height: 181rpx;
}
.server-wrap {
  display: flex;
  justify-content: space-between;
}
.card.mb-14 {
  margin-bottom: 14rpx;
}
@import "../../static/wxss/card.wxss";

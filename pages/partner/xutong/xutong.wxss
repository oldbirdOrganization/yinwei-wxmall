page{
	background-color: #f0f0f0;
}
.bg-img{
	width: 100%;
	height: 438rpx;
	vertical-align: top;
}

.top{
	background-color: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 140rpx;
	margin-bottom: 12rpx;
}
.top-item{
	height: 48rpx;
	line-height: 48rpx;
	padding: 0 24rpx;
	border: 2rpx solid #9c9c9c;
	color: #9c9c9c;
	margin-left: 114rpx;
	border-radius: 8rpx;
	font-size: 20rpx;
}
.top-item:first-child{
	margin-left: 0rpx;
}
.top-item.active{
	color: #b98c70;
	border-color: #b98c70;
}

.form{
	padding: 0rpx 36rpx;
	font-size: 26rpx;
	background-color: #fff;
}
.select-list{
	padding: 30rpx 18rpx;
	font-size: 24rpx;
	border-bottom: 2rpx solid #d8d8d8;
}
.select-item{
	height: 58rpx;
	display: flex;
	align-items: center;
}
.select-icon{
	width: 22rpx;
	height: 22rpx;
	border-radius: 50%;
	border: 1rpx solid #bf947b;
	background-color: #fff;
	margin-right: 24rpx;
}
.select-icon.active{
	background-color: #c0987f;
}
.select-item-txt{
	margin-right: 32rpx;
	font-size: 24rpx;
}
.select-item-price{
	color: #d90000;
	font-size: 24rpx;
}
.item{
	display: flex;
	min-height: 96rpx;
	border-bottom: 2rpx solid #d8d8d8;
}
.label{
	padding-left: 24rpx;
	width: 270rpx;
	line-height: 96rpx;
	font-size: 26rpx;
}
.input{
	display: flex;
	align-items: center;
	font-size: 26rpx;
}
.input-txt{
	line-height: 96rpx;
	width: 414rpx;
	color: rgba(0,0,0,0.6);
}
.btn{
	padding: 34rpx 0rpx;
}
.submit-btn{
	width: 323rpx;
	height: 66rpx;
	line-height: 66rpx;
	text-align: center;
	background-color: #c0987f;
	color: #fff;
	font-size: 32rpx;
	letter-spacing: 10rpx;
	border-radius: 28rpx;
}

.detail{
	height: 135rpx;
	background-color: #f0f0f0;
}
.address,
.phone{
	display: flex;
	justify-content: center;
	align-items: center;
}
.address{
	margin-top: 23rpx;
	height: 46rpx;
}
.address-icon{
	width: 40rpx;
	height: 46rpx;
	margin-right: 8rpx;
}
.address-txt{
	color: #444444;
	font-size: 24rpx;
}
.phone-icon{
	width: 38rpx;
	height: 50rpx;
	margin-right: 18rpx;
}
.phone-txt{
	font-size: 34rpx;
}
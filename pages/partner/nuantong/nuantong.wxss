page {
  background-color: #f0f0f0;
}
.bg-img {
  width: 100%;
  height: 300rpx;
  vertical-align: top;
}

.form {
  padding: 0rpx 36rpx;
  font-size: 26rpx;
  background-color: #fff;
}
.select {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.select-item {
  display: flex;
  align-items: center;
  line-height: 40px;
}
.item-select {
  flex-wrap: wrap;
}
.select-list-one {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 38rpx;
}
.select-item-one {
  width: 334rpx;
  height: 476rpx;
  border: 1rpx solid #d7bdaf;
  border-radius: 20rpx;
  padding: 0rpx 10px 10px;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.select-item-one:nth-child(2n) {
  margin-right: 0rpx;
}
.select-item-top {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 58rpx;
}
.select-icon {
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  border: 1rpx solid #bf947b;
  background-color: #fff;
  margin-right: 8rpx;
}
.select-icon.active {
  background-color: #c0987f;
}
.select-item-name {
  font-size: 22rpx;
  text-align: center;
}
.select-con {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.select-con-item {
  font-size: 20rpx;
  color: #bf947b;
  line-height: 30rpx;
  width: 100%;
}
.select-item-one .select-img {
  width: 302rpx;
  height: 174rpx;
}
.select-desc {
  height: 140rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.select-desc-item {
  font-size: 18rpx;
  line-height: 34rpx;
  text-align: center;
  width: 100%;
}

.select-list-two {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 332rpx;
  width: 100%;
}
.select-item-two {
  width: 170rpx;
  height: 250rpx;
}
.package-img {
  width: 170rpx;
  height: 140rpx;
}
.select-item-type {
  padding: 8rpx 0rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #bf977e;
  border-radius: 16rpx;
  width: 114rpx;
  text-align: center;
  margin-left: 28rpx;
}

.icon {
  width: 11rpx;
  height: 26rpx;
  transform: rotate(90deg);
}

.item {
  display: flex;
  min-height: 96rpx;
  border-bottom: 2rpx solid #d8d8d8;
}
.label {
  padding-left: 24rpx;
  width: 210rpx;
  line-height: 96rpx;
  font-size: 26rpx;
}
.input {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.input-txt {
  line-height: 96rpx;
  width: 430rpx;
  color: rgba(0, 0, 0, 0.6);
}
.btn {
  padding: 34rpx 0rpx;
}
.submit-btn {
  width: 323rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  background-color: #c0987f;
  color: #fff;
  font-size: 32rpx;
  letter-spacing: 10rpx;
  border-radius: 28rpx;
}

.detail {
  height: 94rpx;
  background-color: #f0f0f0;
}
.phone {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 94rpx;
}
.phone-icon {
  width: 38rpx;
  height: 50rpx;
  margin-right: 18rpx;
}
.phone-txt {
  font-size: 34rpx;
}

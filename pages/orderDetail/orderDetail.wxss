page,
.container {
  background-color: #fff;
}

.container{
	padding-bottom: 116rpx;
}
.top{
	height: 200rpx;
	padding: 24rpx 0rpx 24rpx 64rpx;
	background-color: #c0987f;
}
.status{
	color: #fff;
	font-size: 32rpx;
	line-height: 54rpx;
}
.top-txt{
	color: #fff;
	font-size: 28rpx;
	line-height: 54rpx;
}
.item{
	height: 126rpx;
	margin: 0rpx 36rpx;
	border-bottom: 1rpx solid #d4d4d4;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0rpx 24rpx;
}
.label{
	font-size: 30rpx;
}
.dd{
	font-size: 30rpx;
}

.person{

}
.person-left{

}
.name{
	display: flex;
}
.person-name{
	font-size: 30rpx;
}
.stars{
	display: flex;
}
.star{
	width: 40rpx;
	height: 40rpx;
}
.person-phone{
	margin-top: 24rpx;
	font-size: 30rpx;
}
.person-btn{
	width: 172rpx;
	height: 60rpx;
	border: 1rpx solid #de6b00;
	line-height: 60rpx;
	text-align: center;
	border-radius: 34rpx;
	font-size: 30rpx;
	color: #de6b00;
}
.fix-image{
	width: 98rpx;
	height: 98rpx;
	margin-right: 10rpx;
}
.desc{
	margin-top: 40rpx;
	margin-left: 116rpx;
	width: 476rpx;
	height: 222rpx;
	border: 1rpx solid #989898;
	border-radius: 16rpx;
	padding: 12rpx;
}
.desc-title,
.desc-dd{
	font-size: 18rpx;
	line-height: 30rpx;
}
.tag{
	margin-top: 38rpx;
	margin-bottom: 34rpx;
	background-color: #c0987f;
	width: 292rpx;
	height: 58rpx;
	line-height: 58rpx;
	text-align: center;
	color: #fff;
	font-size: 28rpx;
	letter-spacing: 5rpx;
	border-radius: 0 34rpx 34rpx 0;
}

.slip{
	height: 66rpx;
	margin: 0rpx 36rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	border-bottom: 1rpx solid #d4d4d4;
	padding: 0 28rpx;
}
.last-slip{
	border-bottom: none;
}
.fee-name{
	font-size: 26rpx;
}
.price{
	color: #c0987f;
	font-size: 34rpx;
}
.coupon{

}
.coupon-amount{
	font-size: 24rpx;
	color: #b4b4b4;
	margin-right: 10rpx;
}
.arrow-icon{
	width: 12rpx;
	height: 26rpx;
}
.bottom{
	position: fixed;
	left: 0rpx;
	bottom: 0rpx;
	width: 100%;
	height: 96rpx;
	background-color: #fff;
	border-top: 1rpx solid #bfbfbf;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}
.total{
	font-size: 28rpx;
	margin-right: 38rpx;
}
.btn{
	width: 228rpx;
	height: 96rpx;
	background-color: #c0987f;
	color: #fff;
	line-height: 96rpx;
	text-align: center;
	font-size: 34rpx;
	font-weight: bold;
	border-radius: 0rpx;
}

.require{
	padding: 20rpx;
	margin: 0rpx 36rpx;
	border-bottom: 1rpx solid #d4d4d4;
}
.require .label{
	line-height: 40rpx;
}
.require-desc{
	margin-top: 10rpx;
}
@import "../../static/wxss/form.wxss";
@import "../../static/wxss/card.wxss";
.plan-item {
  border-bottom: 2rpx solid #d8d8d8;
}
.plan-select {
  display: flex;
}
.plan-list {
  /* padding-bottom: 10rpx;
  display: flex;
  flex-wrap: wrap; */
  padding-bottom: 10rpx;
}
.plan {
  padding: 10rpx 20rpx;
}
.plan-img {
  width: 600rpx;
  height: 450rpx;
  border-radius: 16rpx;
}
.plan-btn {
  width: 116rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  border: 1rpx solid #c0987f;
  border-radius: 16rpx;
  margin-left: 8rpx;
  text-align: center;
  margin-bottom: 16rpx;
}
.plan-btn.active {
  background-color: #c0987f;
  color: #fff;
}
.plan-content {
  width: fit-content;
  height: fit-content;
  line-height: 36rpx;
  font-size: 24rpx;
  margin-left: 8rpx;
  text-align: left;
  margin-bottom: 16rpx;
}